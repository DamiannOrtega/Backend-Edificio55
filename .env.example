# Configuración de Base de Datos
# Copia este archivo a .env y completa con tus credenciales reales

DB_ENGINE=django.db.backends.postgresql
DB_NAME=tu_nombre_de_base_de_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña_segura
DB_HOST=tu_host.supabase.com
DB_PORT=5432
DB_SSLMODE=require

# Django Secret Key
# Genera una nueva con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu_secret_key_aqui

# Debug Mode (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas, usa * para permitir todos en desarrollo)
ALLOWED_HOSTS=localhost,127.0.0.1
